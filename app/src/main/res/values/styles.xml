<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="custom_theme_color">#FFFFFF</color>
    <color name="font_color">#FFFFFF</color>

    <style name="PopupDialog" parent="@android:style/Theme.Translucent.NoTitleBar" />

    <style name="MyDialogTheme" parent="android:Theme.Dialog">
        <item name="android:background">#ffdddddd</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="ApplicationStyle" parent="android:Theme.Holo.Light">
        <item name="android:button">@style/CKButton</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--
    colorPrimary – The color of the app bar.
    colorPrimaryDark – The color of the status bar and contextual app bars; this is normally a dark version of colorPrimary.
    colorAccent – The color of UI controls such as check boxes, radio buttons, and edit text boxes.
    windowBackground – The color of the screen background.
    textColorPrimary – The color of UI text in the app bar.
    statusBarColor – The color of the status bar.
    navigationBarColor – The color of the navigation bar.
    -->

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <!--<style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <!--<style name="CustomTheme" parent="Theme.MaterialComponents.Light">-->
    <style name="CustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- AppCompat Attributes -->
        <!--colorPrimary – The color of the app bar.-->
        <item name="colorPrimary">@color/theme_color</item>
        <!--colorPrimaryDark – The color of the status bar and contextual app bars; this is normally a dark version of colorPrimary.-->
        <item name="colorPrimaryDark">@color/theme_color</item>
        <!--colorAccent – The color of UI controls such as check boxes, radio buttons, and edit text boxes.-->
        <item name="colorAccent">@color/theme_color</item>
        <!--windowBackground – The color of the screen background.-->
        <item name="android:windowBackground">@color/form_background_color</item>
        <!--textColorPrimary – The color of UI text in the app bar.-->
        <item name="android:textColor">#000000</item>
        <!--statusBarColor – The color of the status bar.-->
        <!--navigationBarColor – The color of the navigation bar-->

        <item name="android:colorBackground">@color/form_background_color</item>
        <item name="android:textSize">18sp</item>

        <item name="android:icon">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:typeface">serif</item>
        <!--<item name="android:editTextStyle">@style/customEdit</item>-->
        <item name="android:spinnerStyle">@style/spinner_grayline</item>
        <!--<item name="android:spinnerItemStyle">@style/spinnerItem_grayline</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/icddrb_SpinnerItem</item>-->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="customEdit_grayline" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:textColor">#006699</item>
        <item name="android:background">@drawable/edittext_round_grayline</item>
        <item name="android:padding">4sp</item>
    </style>
    <style name="spinner_grayline" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:textColor">#006699</item>
        <item name="android:background">@drawable/spinner_round_grayline</item>
        <item name="android:padding">4sp</item>
    </style>
    <style name="spinnerItem_grayline" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:textColor">#006699</item>
        <item name="android:background">@drawable/spinner_item_grayline</item>
        <item name="android:padding">4sp</item>
    </style>

    <style name="CustomTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="CustomThemeActivity" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@color/form_background_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="SpinnerItem" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/spinner_item_border</item>
        <item name="android:padding">5sp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textSize">@dimen/apps_text_size</item>
    </style>

    <style name="icddrb_spinner_style_new" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_gradient</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#006699</item>
        <item name="android:background">@drawable/edittext_round</item>
    </style>

    <style name="MyDropDownNav" parent="android:style/Theme.Holo.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#F3F3F3</item>
    </style>

    <style name="TBoxStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#6699CC</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5sp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CKButton" parent="android:style/Widget.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:width">400sp</item>
